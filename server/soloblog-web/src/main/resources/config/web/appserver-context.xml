<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd">

	<bean class="org.springframework.aop.aspectj.annotation.AnnotationAwareAspectJAutoProxyCreator" />

	<bean id="beanUtils" class="com.gao.soloblog.common.util.BeanUtils" scope="singleton" />
	<!-- 读取properties配置文件 -->
	<bean id="properties" class="com.gao.soloblog.common.util.PropertiesUtil"
		init-method="init">
		<property name="appserver" value="classpath:appserver.properties" />
		<property name="business" value="classpath:business.properties" />
	</bean>
	<!-- 可配置常量类 -->
	<bean id="appServerModel" class="com.gao.soloblog.common.entity.AppServerModel">
		<property name="verifyToken" value="${appserver.verifyToken}" />
		<property name="picThumbanailEnabled" value="${appserver.pic.thumbanail.enabled}" />
		<property name="picThumbanailSuffix" value="${appserver.pic.thumbanail.suffix}" />
	</bean>
	
	<!-- 线程池配置 -->
	<bean id="taskExecutor"
		class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
		<!-- 线程池维护线程的最少数量 -->
		<property name="corePoolSize" value="10" />
		<!-- 线程池维护线程所允许的空闲时间 -->
		<property name="keepAliveSeconds" value="300" />
		<!-- 线程池维护线程的最大数量 -->
		<property name="maxPoolSize" value="50" />
		<!-- 线程池所使用的缓冲队列 -->
		<property name="queueCapacity" value="1000" />
	</bean>
	
</beans>